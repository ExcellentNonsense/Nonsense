@model DisplayViewModel

@{
  ViewBag.Title = "Карточка пользователя";
  ViewBag.Description = "Информация о зарегистрированном пользователе";
}

<div class="container">
  <dl class="row">
    <dt class="col-sm-2">
      Id
    </dt>
    <dd class="col-sm-10">@Model.Id</dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      Логин
    </dt>
    <dd class="col-sm-10">@Model.UserName</dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      Email
    </dt>
    <dd class="col-sm-10">@Model.Email</dd>
  </dl>

  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
  <a asp-action="Index" class="btn btn-secondary">Закрыть</a>
  <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline-block">
    <button type="submit" class="btn btn-outline-danger ml-4">Удалить</button>
  </form>
</div>